    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug Spring Boot App",
            "request": "launch",
            "mainClass": "com.jyx.XAdminApplication",
            "projectName": "x-admin",
            "cwd": "${workspaceFolder}/x-admin",
            "env": {
                "SPRING_PROFILES_ACTIVE": "dev"
            },
            "args": "",
            "vmArgs": "-Dspring.profiles.active=dev -Dserver.port=8080",
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}